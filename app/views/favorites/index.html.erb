<div class="container">
	<div class="row">
		<div class="text-center col-md-6-offset-3">
			<h2><%= @user.email %>'s Favorite Tutorials</h2>
		</div>
	</div>
</div>

<br>

<div class="container">
	<div class="row">
		<div class="col-md-2">
		</div>
			<div class="col-md-4">
				<%= render 'comment_form' %>
			</div>
			<div class="col-md-3">
				<% @video_favs.reverse.each do |video_fav| %>
						
				<br>
				
				<iframe width="420" height="315" src="<%=video_fav[:video_url]%>" frameborder="0" allowfullscreen></iframe>
				<%= link_to 'Delete', user_favorite_path(current_user, video_fav[:fav_id]), method: :delete, :class => 'btn btn-danger video-favs' %>	 
			<% end %>
			</div>
		<div class="col-md-3">
		</div>
	</div>
</div>

