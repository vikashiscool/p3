
<h1>Here are the top ten results for: "<%= params[:search] %>"</h1>

<% @ids.each do |id| %>

	<p><iframe width="420" height="315" src="https://www.youtube.com/embed/<%= id %>" frameborder="0" allowfullscreen></iframe>

	<% url = 'https://www.youtube.com/embed/' + id.to_s %>
	
	<%= form_tag user_favorites_path(current_user), method: :post do %>
		<%= hidden_field_tag 'user_id', current_user.id %>
		<%= hidden_field_tag 'video_id', id %>
		<%= hidden_field_tag 'url', url %> 	<!-- taken from favorites schema -->
		<%= submit_tag 'Save to Faves' %>
	<% end %>

<% end %>